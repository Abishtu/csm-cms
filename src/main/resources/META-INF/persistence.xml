<persistence
        xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence_2_1.xsd"
>
  <persistence-unit name="org.samcms.db" transaction-type="RESOURCE_LOCAL">
    <description>Persistence unit for Sam CMS - A CMS package for my blog</description>
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="#"/>
      <property name="jakarta.persistence.jdbc.user" value="#"/>
      <property name="jakarta.persistence.jdbc.password" value="#"/>
      
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>

    <class>org.csmcms.db.model.Content</class>
    <class>org.csmcms.db.model.Tag</class>

  </persistence-unit>
</persistence>